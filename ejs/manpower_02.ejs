<div class="cms-main">
	<%- include('common/_sidebar'); %>
	<div class="cms-content">
		<%- include('common/_header'); %>
		<div class="manpower-page">
			<div class="manpower-page__control">
				<ul class="manpower-page__search">
					<li class="manpower-page__search-field manpower-page__search-field--company-name">
						<input type="text" class="form-control" placeholder="Tên công ty">
					</li>
					<li class="manpower-page__search-field manpower-page__search-field--status">
						<select name="" id="" class="form-control form-control--select">
							<option value="">Trạng thái</option>
							<option value="">--</option>
							<option value="">--</option>
						</select>
					</li>
				</ul>
				<a href="#" class="c-btn__01 c-btn__01--add js-show-modal" data-modal="add-company">Tạo mới</a>
			</div>
			<div class="manpower-page__wp">
				<%- include('table/_table_manpower_02.ejs'); %>
			</div>
			<%- include('common/_area_footer.ejs'); %>
		</div>
	</div>
</div>

<div class="c-modal create-company" id="add-company">
	<div class="c-modal__wp">
		<form action="" method="post" class="c-modal__form">
			<h3 class="c-modal__ttl">Công ty cung ứng nhân lực</h3>
			<div class="create-company__wp">
				<dl class="create-company__field create-company__field--full">
					<dt class="create-company__field-label"><span>*</span>Tên công ty</dt>
					<dd class="create-company__field-input">
						<input type="text" class="form-control" placeholder="Nhập tên công ty">
					</dd>
				</dl>
				<dl class="create-company__field">
					<dt class="create-company__field-label"><span>*</span>Email</dt>
					<dd class="create-company__field-input">
						<input type="text" class="form-control" placeholder="Nhập email">
					</dd>
				</dl>
				<dl class="create-company__field">
					<dt class="create-company__field-label">Số điện thoại</dt>
					<dd class="create-company__field-input">
						<input type="text" class="form-control" placeholder="Nhập số điện thoại">
					</dd>
				</dl>
			</div>
			<div class="c-modal__control">
				<button class="c-btn__01 c-btn__01--gray js-cancel">Hủy</button>
				<a href="#" class="c-btn__01">Thêm mới</a>
			</div>
		</form>
	</div>
</div>

